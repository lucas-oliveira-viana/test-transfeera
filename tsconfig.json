{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["@testing-library/jest-dom"],
    "paths": {
      "@core/*": ["./src/core/*"],
      "@shared/*": ["./src/shared/*"]
    }
  }
}
